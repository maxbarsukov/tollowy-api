<h1>Sign In</h1>

<%= form_for :session, url: admin_sign_in_path do |f| %>
  <p>
    <%= f.label 'username or email:'%><br>
    <%= f.text_field :username_or_email, id: 'email' %>
  </p>
  <p>
    <%= f.label 'password:'%><br>
    <%= f.password_field :password, id: 'password' %>
  </p>
  <p>
    <%= f.submit 'Log In' %>
  </p>
<% end %>
