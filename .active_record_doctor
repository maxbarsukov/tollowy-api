  global :ignore_tables, [
    'schema_migrations',
    'ar_internal_metadata'
  ]

  global :ignore_models, [
    'ActionMailbox::InboundEmail',
    'ActiveStorage::Attachment',
    'ActiveStorage::VariantRecord',
    'ActiveStorage::Blob',
    'ActionText::RichText',
    'ActionText::EncryptedRichText'
  ]
end
